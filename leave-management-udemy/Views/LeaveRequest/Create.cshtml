@model leave_management_udemy.Models.CreateLeaveRequestVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LeaveTypeId" class="control-label"></label>
                @*<input asp-for="LeaveTypeId" class="form-control" />*@
                @Html.DropDownListFor(q => q.LeaveTypeId, new SelectList(Model.LeaveTypes, "Value", "Text"), "Select Leave Type", new { @class = "form-control" })
                <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="StartDate" class="control-label"></label>
                        <input asp-for="StartDate" class="form-control selectorStartDate" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="EndDate" class="control-label"></label>
                        <input asp-for="EndDate" class="form-control selectorEndDate" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="input-group">
                        <span class="input-group-text">Comment</span>
                        <textarea asp-for="CreationComment" class="form-control" aria-label="Comment"></textarea>

                    </div>
                </div>

            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Request Leave" class="btn btn-primary btn-block" />
            </div>

        </form>
    </div>
</div>

<div class="form-group">
    <a class="btn btn-secondary btn-block" asp-action="Index">Back to List</a>
</div>

@section Scripts{ 
    <script>
        $(function () {
            $(".selectorStartDate").flatpickr({
                altInput: true,
                altFormat: "F j, Y",
                defaultDate: "today",
                dateFormat: "Y-m-d"
            });

            var date = new Date();
            $(".selectorEndDate").flatpickr({
                altInput: true,
                altFormat: "F j, Y",
                defaultDate: date.setMonth(date.getMonth()+1,1),
                dateFormat: "Y-m-d"
            });
        });
    </script>
}
